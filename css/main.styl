h1,h2,h3,h4,p
  margin 0
  padding 0
html
  font-size 16px

header
  padding-top 90px
  position absolute
  top 0
  left 0
  right 0
  nav
    cursor pointer
    .btn-gamburger
      float right
      width 45px
      padding 4px
      border-radius 5px
      cursor pointer
      span
        z-index: 1;
        position: relative;
        display block
        background #fff
        width 25px
        height 3px
        margin 4px
    &:hover
      background #194277
.welcome
  background url("../img/welcome.jpg") no-repeat center top
  background-size cover
  min-height 870px
  position relative
  h1
    color: white;
    font-family: Lato;
    font-size: 50px;
    font-weight: 900;
    line-height: 60px;
    text-transform: uppercase;
    text-align center
    padding-top 30px
    max-width 800px
  p
    color: white;
    font-family: Lato;
    font-size: 16px;
    font-weight: 300;
    line-height: 35px;
    text-transform: uppercase;
    text-align: center;
    padding 40px 0 70px 0
    max-width 760px
  .btn
    color: #3695ff;
    font-family: Lato;
    font-size: 16px;
    font-weight: 700;
    line-height: 30px;
    text-transform: uppercase;
    background-color: white;
    border-radius: 28px;
    padding 11px 65px
.wrap
  background #fff
  min-height 410px
.expert
  background-color: #f1f8ff;
  h2
    text-align center
    padding 95px 0
    color: #3677fd;
    font-family: Lato;
    font-size: 50px;
    font-weight: 300;
    line-height: 35px;

  .img
    margin  15px 10px 10px 10px
    border: 1px solid #b7c0c9;
    border-radius 50%

.wrap-container
  padding 170px 0 0 0

.flexclass
  display flex
  flex-direction column
  align-items center
